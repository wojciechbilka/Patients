<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="patients.PatientsController">
    <HBox minHeight="300" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <VBox minWidth="100" maxWidth="130" spacing="10" HBox.hgrow="ALWAYS">
            <Button fx:id="add" onAction="#addPatient" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                ADD
            </Button>
            <Button fx:id="remove" onAction="#removePatient" VBox.vgrow="ALWAYS">
                REMOVE
            </Button>
            <Button fx:id="performTest" onAction="#performTest" VBox.vgrow="ALWAYS">
                PERFORM TEST
            </Button>
        </VBox>
        <VBox minWidth="330" maxWidth="400" spacing="10" HBox.hgrow="ALWAYS">
            <TextField fx:id="nameField" promptText="Name.." VBox.vgrow="ALWAYS">
            </TextField>
            <TextField fx:id="surnameField" promptText="Surname.." VBox.vgrow="ALWAYS">
            </TextField>
            <TextField fx:id="personalNumberField" promptText="PersonalNumber.." VBox.vgrow="ALWAYS">
            </TextField>
            <TextField fx:id="balanceField" promptText="Money paid in.." VBox.vgrow="ALWAYS">
            </TextField>
            <Label fx:id="logMessage" alignment="CENTER" contentDisplay="CENTER" visible="false" VBox.vgrow="ALWAYS">
            </Label>
        </VBox>
        <VBox minWidth="200" spacing="10" HBox.hgrow="ALWAYS">
        <ScrollPane fx:id="scrollPane" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <GridPane fx:id="grid" gridLinesVisible="true" hgap="20" vgap="5" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                    <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                    <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                    <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                    <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints valignment="TOP" vgrow="ALWAYS"/>
                </rowConstraints>
                <Label fx:id="gridLabel0" styleClass="columnTitle" GridPane.columnIndex="0" GridPane.columnSpan="1"
                       GridPane.rowIndex="0" GridPane.rowSpan="1">
                    Num
                </Label>
                <Label fx:id="gridLabel1" styleClass="columnTitle" GridPane.columnIndex="1" GridPane.columnSpan="1"
                       GridPane.rowIndex="0" GridPane.rowSpan="1">
                    Name
                </Label>
                <Label fx:id="gridLabel2" styleClass="columnTitle" GridPane.columnIndex="2" GridPane.columnSpan="1"
                       GridPane.rowIndex="0" GridPane.rowSpan="1">
                    Surname
                </Label>
                <Label fx:id="gridLabel3" styleClass="columnTitle" GridPane.columnIndex="3" GridPane.columnSpan="1"
                       GridPane.rowIndex="0" GridPane.rowSpan="1">
                    Personal Number
                </Label>
                <Label fx:id="gridLabel4" styleClass="columnTitle" GridPane.columnIndex="4" GridPane.columnSpan="1"
                       GridPane.rowIndex="0" GridPane.rowSpan="1">
                    Balance
                </Label>
            </GridPane>
        </ScrollPane>
        </VBox>
    </HBox>
</AnchorPane>
